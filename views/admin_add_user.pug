    article
      .row
        .col.s12.m6.offset-m3
          .card.dark-green.accent-2
            .card-content.black-text
              span.card-title
                center
                  p.fonts
                    b Create a new user:
              center
                .row
                  .col.s12.m12
                    .card.blue.accent-4
                      .card-content.white-text
                -if(message)
                  p
                    = message
                -if(errors)
                  each error in errors
                    p
                      = error.msg 
                br
                form(action='/register', method='post')
                          | New username:
                          input(type='text', name='newusername', required='')
                          br
                          br
                          | 					New user's password:
                          input(type='text', name='newuserpw', required='')
                          br
                          br
                          | 					New user's email:
                          input(type='text', name='newuseremail', required='')
                          br
                          br
                          | 					New user's first name:
                          input(type='text', name='newuserfirst', required='')
                          br
                          br
                          | 					New user's last name:
                          input(type='text', name='newuserlast', required='')
                          br
                          br
                          | 					New user's team association:
                          input(type='text', name='newuserteam', required='')
                          br
                          br
                          .row
                            .col.s12.m12
                              .card.blue.accent-1
                                .card-content.black-text
                                  label
                                    font(color='black') Users Role Level:
                                  br
                                  input#opt1.with-gap(name='userrole', type='radio', checked='', value='Athlete')
                                  label(name='userrole', for='opt1')
                                    a.btn.green.tooltipped(data-position='right', data-delay='50', data-tooltip='- Enter workouts, view past workouts') Athlete Features
                                  br
                                  br
                                  br
                                  input#opt2.with-gap(name='userrole', type='radio', value='Trainer')
                                  label(name='userrole', for='opt2')
                                    a.btn.blue.tooltipped(data-position='right', data-delay='50', data-tooltip='- View team status') Trainer Features
                                  br
                                  br
                                  br
                                  input#opt3.with-gap(name='userrole', type='radio', value='Admin')
                                  label(name='userrole', for='opt3')
                                    a.btn.red.tooltipped(data-position='right', data-delay='50', data-tooltip='- CSV data dumps, add/remove users to/from the system') Admin Features
                                  br
                                  br
                                  br
                    button.btn.waves-effect.waves-light.green(type='submit', name='action')
                      | Create User
