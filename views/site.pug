                          span.card-title
                          form(name='form1', method='post', action='/')
                            i.material-icons.prefix account_circle
                            input(type='text', placeholder='Username', name='username', required='')
                            br
                            br
                            i.material-icons.prefix vpn_key
                            input(type='password', placeholder='Password', name='password', required='')
                            br
                            br
                            button.btn.waves-effect.waves-orange.blue.accent-4(type='submit', name='action')
                              | Log in
                              i.material-icons.right send
                  .card-action
                    center
                      a.waves-effect.waves-light.btn.modal-trigger(href='#modal1')
                        | Forgot Password
                        i.material-icons.right help
                      b
                        h6
                          font(color='white') Team on a Cob 2017
                      
    // Button trigger modal
    script.
      $(document).ready(function(){
      // the "href" attribute of .modal-trigger must specify the modal ID that   wants to be triggered
      $(document).on("click", ".modal-trigger", function (e) {
          e.preventDefault();
          var _self = $(this)
          $('.modal-trigger').leanModal();
      });
      });
        
#modal1.modal
  .modal-content.light-blue.darken-4
    font(color='cyan')
      .container
        .row
          .col.s12.m12
            .card.light-blue.darken-2
              .card-content.white-text
                span.card-title
                  center Forgot Password (Not currently working):
