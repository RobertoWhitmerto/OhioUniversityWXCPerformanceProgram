              .row
                .col.s12.m12
                  .card.light-blue.darken-4
                    .card-content.cyan-text
                      span.card-title
                        label
                          font(color='cyan') New Password:
                        input#pass(type='password', name='pass', required='', onkeyup='validate()')
                        br
                        label
                          font(color='cyan') Confirm New Password:
                        input#cpass(type='password', name='cpass', required='', onkeyup='validate()')
                        br
                        br
                        center
                          span#verifier
                        script.
                          function validate(){
                          if(document.getElementById("pass").value.length <= 5 || document.getElementById("cpass").value.length <= 5){
                          document.getElementById("verifier").innerHTML ="Too short! Make it above 5 characters please :)";
                          document.getElementById("checked").disabled=true;
                          return;
                          }
                          else{
                          if(document.getElementById("pass").value == document.getElementById("cpass").value){
                          document.getElementById("verifier").innerHTML = "Match!";
                          document.getElementById("checked").disabled=false;
                          return;
                          }
                          else{
                          document.getElementById("verifier").innerHTML = "The two fields do not match! :(";
                          document.getElementById("checked").disabled=true;
                          return;
                          }
                          }
                          }
              center
                button#checked.btn.waves-effect.waves-light.light-blue.lighten-1(type='submit', name='action')
                  | Submit
                  i.material-icons.right send
