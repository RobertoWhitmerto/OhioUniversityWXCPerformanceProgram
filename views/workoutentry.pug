    body
      .row
        .col.s12.m5.offset-m3
          .card.indigo.accent-4
            .card-content.cyan-text
              span.card-title
                center
                  p.fonts
                    b My Workout
              .row
                .col.s12.m12
                  .card.light-blue.darken-4
                    .card-content.cyan-text
                      span.card-title Date Information:
                      form(action='/workoutentry', method='post')
                        br
                        center
                          a.waves-effect.waves-light.btn.light-green(onclick='myFunction()') Autofill - Today
                        br
                        script.
                          function myFunction() {
                          var d = new Date();
                          var n = d.getDate();
                          var m = d.getMonth();
                          document.getElementById("month").selectedIndex = m + 1;
                          document.getElementById("day").selectedIndex = n;
                          }
                        label Month
                        select#month.browser-default(name='month')
                          option(name='month', value='invalidmonth') --
                          option(name='month', value='January') January
                          option(name='month', value='February') February
                          option(name='month', value='March') March
                          option(name='month', value='April') April
                          option(name='month', value='May') May
                          option(name='month', value='June') June
                          option(name='month', value='July') July
                          option(name='month', value='August') August
                          option(name='month', value='September') September
                          option(name='month', value='October') October
                          option(name='month', value='November') November
                          option(name='month', value='December') December
                        br
                        br
                        label Day of month
                        select#day.browser-default(name='day')
                          option(name='day', value='dayinvalid') --
                          option(name='day', value='day1') 1
                          option(name='day', value='day2') 2
                          option(name='day', value='day3') 3
