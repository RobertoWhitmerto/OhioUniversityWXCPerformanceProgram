                        option(name='rpeval', value='18') 18
                        option(name='rpeval', value='19') 19
                        option(name='rpeval', value='20') 20
                      br
                      br
                      label Time of workout (minutes):
                      p.range-field.white
                        input(name='time', type='range', min='1', max='120', value='0', step='1')
                      br
                      br
                      label Distance:
                      input(type='text', placeholder='8.03', name='distance')
                      br
                      br
                      label Surface:
                      select.browser-default(name='surface')
                        option(name='surface', value='unknown') --
                        option(name='surface', value='track') Track
                        option(name='surface', value='trail') Trail
                        option(name='surface', value='dirt') Dirt
                        option(name='surface', value='grass') Grass
                        option(name='surface', value='concrete/asphalt') Concrete/Asphalt
                      br
                      br
                      br
              .row
                .col.s12.m12
                  .card.light-blue.darken-4
                    .card-content.cyan-text
                      span.card-title Extra Information:
                      .row
                        .input-field.col.s12
                          textarea#textarea1.materialize-textarea(length='256', name='mynotes')
                          label(name='notes', for='textarea1') My Notes
                      br
                      br
              center
                button.btn.waves-effect.waves-light.light-blue.lighten-1(type='submit', name='action')
                  | Submit My Workout
                  i.material-icons.right send
